<h1 class="text-center display-6">Donate As per User And His Bio</h1>
<br/>
<br/>
<% @users.each do |user| %>
  <div class="row donation-list">
    <div class="col-md-3">
      Email: <%= user.email %>
    </div>
    <div class="col-md-6">
        Bio: <%= user.bios.first.try(:Bio) %>
    </div>
    <div class="col-md-2">
        <input type="submit" class="btn btn-success" value="Donate">
    </div>
  </div>
  <br/>

<%end%>
